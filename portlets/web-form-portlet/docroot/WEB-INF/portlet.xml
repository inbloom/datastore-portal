<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>1</portlet-name>
		<display-name>Web Form</display-name>
		<portlet-class>com.liferay.webform.portlet.WebFormPortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/view.jsp</value>
		</init-param>
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Report a Problem</title>
			<short-title>Report a Problem</short-title>
			<keywords>Report a Problem</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>subject</name>
				<value>Report a Problem</value>
			</preference>
			<preference>
				<name>saveToDatabase</name>
				<value>false</value>
			</preference>
			<preference>
				<name>sendAsEmail</name>
				<value>true</value>
			</preference>
			<preference>
				<name>fieldLabel1</name>
				<value>Problem Type</value>
			</preference>
			<preference>
				<name>fieldType1</name>
				<value>options</value>
			</preference>
			<preference>
				<name>fieldOptions1</name>
				<value>Incorrect Data,Can't Access My Students' Data,Other App Problem,Feature Request,Other Feedback</value>
			</preference>
			<preference>
				<name>fieldLabel2</name>
				<value>Problem Description</value>
			</preference>
			<preference>
				<name>fieldType2</name>
				<value>textarea</value>
			</preference>
			<preference>
				 <name>portlet-setup-show-borders</name>
				 <value>false</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>